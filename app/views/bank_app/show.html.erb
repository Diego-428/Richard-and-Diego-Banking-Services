<% if Current.client %>

<div class="container-fluid mt-5">
  <div class="row">
    <!-- Left Part -->
    <%= render partial: "shared/checking_sidebar"%>

    <!-- Right Part -->
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th>Transaction Date</th>
            <th>Transaction Type</th>
            <th>Transaction Amount</th>
          </tr>
        </thead>
        <tbody>
          <%Current.client.account_transactions.each do |t|%>
					  <tr>
            <td><%= t.created_at%></td>
            <td><%= t.transaction_type.capitalize%></td>
            <td>$ include amount</td>
          </tr>
				  <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% end%>